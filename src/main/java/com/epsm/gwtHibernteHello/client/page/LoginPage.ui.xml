<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:gwt="urn:import:com.google.gwt.user.client.ui" 
	xmlns:resources="urn:with:com.epsm.gwtHibernteHello.client.page.Resources">
	<ui:with type="com.epsm.gwtHibernteHello.client.page.Resources" field="resources"/>

	<ui:style src="css/General.css"/>
	<ui:style src="css/Login.css" field="login"/>

	<gwt:HeaderPanel styleName="{style.general}">
		<gwt:FlowPanel styleName="{style.header}">
			<gwt:Image resource="{resources.logo}"/>
		</gwt:FlowPanel>
		<gwt:HTMLPanel>
			<div class="{style.middle}">
				<div class="{login.errorsContainer}">
					<gwt:Label ui:field="errorLabel" resources:styleName="{login.error}"/>
				</div>
				<div class="{login.inputContainer}">
					<div class="{login.labelsContainer}">
						<gwt:Label text="Login:" resources:styleName="{login.label}"/>
						<gwt:Label text="Password:" resources:styleName="{login.label}"/>
					</div>     
					<div class="{login.fields}">     
						<gwt:TextBox ui:field="loginBox"/>
						<gwt:PasswordTextBox ui:field="passwordBox"/>
						<gwt:Button ui:field="buttonLogin" text="Login"/>
					</div>
				</div>
        	</div>
		</gwt:HTMLPanel>
		<gwt:HTMLPanel styleName="{style.footer}">
			<gwt:Label>Â© 2015 Ardas Group</gwt:Label>
		</gwt:HTMLPanel>
	</gwt:HeaderPanel>
</ui:UiBinder> 
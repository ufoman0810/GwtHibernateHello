<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:gwt="urn:import:com.google.gwt.user.client.ui" 
	xmlns:resources="urn:with:com.epsm.gwtHibernteHello.client.page.Resources">
	<ui:with type="com.epsm.gwtHibernteHello.client.page.Resources" field="resources"/>

	<ui:style src="css/Page.css"/>

	<gwt:HeaderPanel styleName="{style.general}">
		<gwt:FlowPanel styleName="{style.header}">
			<gwt:Image resource="{resources.logo}"/>
		</gwt:FlowPanel>
		<gwt:HTMLPanel>
			<div id="login" class="{style.loginContainer}">
				<div class="{style.loginErrorsContainer">
					<gwt:Label ui:field="loginErrorLabel" resources:styleName="{style.error}"/>
				</div>
				<div class="{style.inputContainer}">
					<div class="{style.labelsContainer}">
						<gwt:Label text="Login:" resources:styleName="{style.label}"/>
						<gwt:Label text="Password:" resources:styleName="{style.label}"/>
					</div>     
					<div class="{style.fields}">     
						<gwt:TextBox ui:field="loginBox"/>
						<gwt:PasswordTextBox ui:field="passwordBox"/>
						<gwt:Button ui:field="buttonLogin" text="Login"/>
					</div>
				</div>
        	</div>
        	<div id="greet" class="{style.greetContainer}">
				<div class="{style.greetLabelContainer}">
					<gwt:Label text="greet"/>
				</div>  
				<div class="{style.logoutContainer}">
					<gwt:Label ui:field="logoutLink" resources:styleName="{style.logoutLink}" text="Logout from system"/>
				</div>  
				<div class="{style.logoutErrorsContainer}">
					<gwt:Label ui:field="logoutErrorLabel" resources:styleName="{style.error}"/>
				</div>  
        	</div>
		</gwt:HTMLPanel>
		<gwt:HTMLPanel styleName="{style.footer}">
			<gwt:Label>Â© 2015 Ardas Group</gwt:Label>
		</gwt:HTMLPanel>
	</gwt:HeaderPanel>
</ui:UiBinder> 
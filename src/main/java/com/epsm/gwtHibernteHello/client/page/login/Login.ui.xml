<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:gwt='urn:import:com.google.gwt.user.client.ui' 
	xmlns:res='urn:with:com.tutorialspoint.client.LoginResources'>
	<ui:with type="com.epsm.gwtHibernteHello.client.page.login.LoginResources" field="res"/>

	<ui:style>
        .headerPanel {
			min-width: 300px;
			min-height: 300px;
			height: 100%;
        }
        
        .header {
            border-bottom: 1px solid black;
        }
        
        .middle {
			position: absolute;
			top: 50%;
			left: 50%;
			width: 250px;
			margin-left: -125px;
        }
        
        .footer {
			text-align: center;
			border-top: 1px solid black;
        }
    </ui:style>

	<gwt:HeaderPanel styleName="{style.headerPanel}">
        <gwt:FlowPanel styleName="{style.header}">
            <gwt:Label text="This is the header"/>
        </gwt:FlowPanel>
        <gwt:ResizeLayoutPanel styleName="{style.middle}">
            <gwt:Label>This is the middle section</gwt:Label>
        </gwt:ResizeLayoutPanel>
        <gwt:FlowPanel styleName="{style.footer}">
            <gwt:Label>This is the footer</gwt:Label>
        </gwt:FlowPanel>
    </gwt:HeaderPanel>
    
    
</ui:UiBinder> 
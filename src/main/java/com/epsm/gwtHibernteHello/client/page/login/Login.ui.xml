<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:gwt="urn:import:com.google.gwt.user.client.ui" 
	xmlns:res="urn:with:com.tutorialspoint.client.LoginResources">
	<ui:with type="com.epsm.gwtHibernteHello.client.page.login.LoginResources" field="res"/>

	<ui:style>
		.general{
			min-width: 400px;
			min-height: 400px;
		}
	      
		.header {
			border-bottom: 1px solid black;
		}
        
		.middle {
			position: absolute;
			top: 50%;
			left: 50%;
			width: 500px;
			float: left;
			margin-left: -170px;
			margin-top: -30px;
		}
        
		.footer {
			text-align: center;
			border-top: 1px solid black;
		}
		
		.label {
			text-align: left;
			margin-top: 7px;
		}
		
		.labelsContainer {
			margin-right: 10px;
			float: left;
		}
		
		.fields {
			width: 200px;
			float: left;
		}
	</ui:style>

	<gwt:HeaderPanel styleName="{style.general}">
		<gwt:FlowPanel styleName="{style.header}">
			<gwt:Image resource="{res.logo}"/>
		</gwt:FlowPanel>
		<gwt:HTMLPanel>
			<div class="{style.middle}">
				<div class="{style.labelsContainer}">
					<gwt:Label text="Login:" res:styleName="{style.label}"/>
					<gwt:Label text="Password:" res:styleName="{style.label}"/>
				</div>     
				<div class="{style.fields}">     
					<gwt:TextBox ui:field="loginBox"/>
					<gwt:PasswordTextBox ui:field="passwordBox"/>
					<gwt:Button ui:field="buttonSubmit" text="Login"/>
				</div> 
        	</div>
		</gwt:HTMLPanel>
		<gwt:HTMLPanel styleName="{style.footer}">
			<gwt:Label>Â© 2015 Ardas Group</gwt:Label>
		</gwt:HTMLPanel>
	</gwt:HeaderPanel>
</ui:UiBinder> 
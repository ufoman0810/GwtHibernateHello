<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:gwt="urn:import:com.google.gwt.user.client.ui" 
	xmlns:resources="urn:with:com.epsm.gwtHibernateHello.client.page.Resources"
	ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
	ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
	ui:generateLocales="default">
	<ui:style src="css/Greeting.css"/>

	<gwt:HTMLPanel>
       	<div class="{style.greeting}">
			<div class="{style.labelContainer">
				<gwt:Label ui:field="greetingLabel" resources:styleName="{style.label}"/>
			</div>  
			<div class="{style.logoutContainer}">
				<gwt:Label ui:field="logoutLink" resources:styleName="{style.logoutLink}">
					<ui:msg description="LogoutLink">Log out from system</ui:msg>
				</gwt:Label>
			</div>  
			<div class="{style.errorsContainer}">
				<gwt:Label ui:field="errorLabel" resources:styleName="{style.logoutError}"/>
			</div>  
       	</div>
	</gwt:HTMLPanel>
</ui:UiBinder> 